@page
@model FinnFragen.Web.Pages.Status.IndexModel
@{
    ViewData["Title"] = "Status";
}

<h1 class="text-center">Status abfragen</h1>


<div class="row justify-content-center align-content-center">
    <div class="col-md-6 col-12 mb-5">
        <form id="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ID"></label>
                <input id="ID" asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Status abfragen</button>
        </form>
    </div>
    <div id="idDiv" class="col-md-6 col-12 d-none">
        Oder auswählen
        <div class="card">
            <div id="idList" class="list-group">
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/StatusSearch.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
